<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".useraccountactivity.UserAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/productIcon"
                    android:layout_marginLeft="11dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic_user_default"
                    app:shapeAppearanceOverlay="@style/CircularImageView" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/change_image"/>
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Jane Doe"
            android:textSize="18dp"
            android:textColor="#333333"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jane.doe@email.com"
            android:textColor="#8D95A3"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/myAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/user_icon"/>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/popins_regular"
                    android:textColor="@color/black"
                    android:text="My Account"
                    android:lineHeight="24dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="15dp"
                            android:src="@drawable/arrow_mark_right"/>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#EEEEEE"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/myOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/document_info"/>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/popins_regular"
                    android:textColor="@color/black"
                    android:text="My Orders"
                    android:lineHeight="24dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="15dp"
                            android:src="@drawable/arrow_mark_right"/>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#EEEEEE"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/mySettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/settings_icon"/>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/popins_regular"
                    android:textColor="@color/black"
                    android:text="Settings"
                    android:lineHeight="24dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="15dp"
                            android:src="@drawable/arrow_mark_right"/>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#EEEEEE"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/myContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/contact_icon"/>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/popins_regular"
                    android:textColor="@color/black"
                    android:text="Contact Us"
                    android:lineHeight="24dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="15dp"
                            android:src="@drawable/arrow_mark_right"/>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#EEEEEE"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginHorizontal="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/logout_icon"/>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/popins_regular"
                    android:textColor="@color/black"
                    android:text="Log Out"
                    android:lineHeight="24dp" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="15dp"
                            android:src="@drawable/arrow_mark_right"/>

                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#EEEEEE"/>
        </LinearLayout>
    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="0dp"
            app:itemRippleColor="@null"
            android:layout_height="50dp"
            android:background="@color/white"
            app:itemIconTint="@color/bottom_nav_color"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/bottom_nav_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>